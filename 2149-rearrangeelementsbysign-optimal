class Solution:
    def rearrangeArray(self, nums: List[int]) -> List[int]:
        n=len(nums)
        ans=[0]*n
        pi=0
        ni=1
        for i in range(n):
            if nums[i]<0:
                ans[ni]=nums[i]
                ni+=2
            else:
                ans[pi]=nums[i]
                pi+=2
        return ans        
